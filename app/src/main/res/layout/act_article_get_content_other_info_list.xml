<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/extra_padding"
    android:orientation="vertical"
    tools:context="activity.article.GetArticleContentOtherInfoList">

    <include layout="@layout/header"/>

    <include layout="@layout/body" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/extra_padding"
        android:orientation="horizontal">

        <TextView
            style="@style/titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_id" />

        <EditText
            android:id="@+id/content_id_text"
            style="@style/textStyle"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="0" />
    </LinearLayout>

    <include layout="@layout/button"/>

</LinearLayout>